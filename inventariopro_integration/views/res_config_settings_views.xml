<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_inventariopro_settings_form" model="ir.ui.view">
        <field name="name">view.inventariopro.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='stock']" position="inside">
                    <h2>Integration between Inventario Pro and Odoo v15</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="inventario_pro_url" string="Settings"/>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Integration URL" for="inventario_pro_url" class="col-md-4 o_light_label"/>
                                        <field name="inventario_pro_url"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>
</odoo>
