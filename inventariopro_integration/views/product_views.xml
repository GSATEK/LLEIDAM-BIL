<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_extra_details">
        <field name="name">product.template.form.view.extra_details</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <page name="sales" position="inside">
                <group>
                    <field name="extra_details"/>
                </group>
                <group attrs="{'invisible': [('extra_details','=', False)]}" string="Extra sale information">
                    <field name="technical_details" widget="one2many" context="{'show_attribute': False}">
                        <tree string="Technical details" editable="bottom">
                            <field name="attribute_id"/>
                            <field name="value_ids" widget="many2many_tags" context="{'default_attribute_id': attribute_id, 'show_attribute': False}"/>
                        </tree>
                    </field>
                </group>
            </page>
        </field>
    </record>
</odoo>
