<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_order_form" model="ir.ui.view">
        <field name="name">sale_order_financing.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="partner_shipping_id" position="after">
                <field name="financing"/>
            </field>
            <page name="customer_signature" position="after">
                <page string="Financing" name="financing_details" attrs="{'invisible': [('financing','=', False)]}">
                    <group>
                        <group>
                            <group col="2">
                                <separator/>
                                <field name="bank_id"/>
                                <field name="bank_financing_id"/>
                            </group>
                        </group>
                        <group>
                            <group col="2">
                                <separator/>
                                <field name="month_duration"/>
                                <field name="interest" widget="percentage"/>
                                <field name="financing_type"/>                            
                            </group>
                        </group>
                    </group>
                    <group>
                        <group col="2">
                            <separator/>
                            <field name="initial_amount"/>
                            <field name="monthly_fee"/>    
                        </group>
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
